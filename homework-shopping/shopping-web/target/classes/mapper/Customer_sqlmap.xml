<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springmvc.dao.CustomerMapper">
    <select id="getCustomerById" parameterType="java.lang.Long" resultType="com.springmvc.domain.po.Customer">
        SELECT * FROM customer WHERE id = #{id};
    </select>
    <select id="getCustomerByName" parameterType="java.lang.String" resultType="com.springmvc.domain.po.Customer">
        SELECT * FROM customer WHERE customer_name = #{customerName};
    </select>
</mapper>